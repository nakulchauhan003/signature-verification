{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.11"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}